---
import Section from "./Section.astro";
---

<Section
  title="Model S"
  subtitle="Explorar inventario"
  color="black"
  id="model-s"
>
  <div slot="footer" class="gap-x-6 flex mx-auto">
    <a
      class="bg-[#171a20] rounded text-md font-semibold text-white px-[60px] py-[10px] inline-block hover:bg-gray-800 hover:text-white hover:border-gray-800 transition-colors opacity-80"
      href="#"
    >
      Pedido personalizado</a
    >
    <a
      class="bg-white text-md font-semibold rounded px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black opacity-80"
      href="#"
    >
      Prueba de conducci√≥n</a
    >
  </div>

  <div slot="background" class="absolute top-0 bottom-0 z-10">
    <img
      alt="Model S"
      class="w-full object-cover aspect-video"
      src="/images/model-s.avif"
      id="bg-image-model-s"
    />
  </div>
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    )
      return true;
    else return false;
  }

  let imageElement = document.querySelector(
    "#bg-image-model-s"
  ) as HTMLImageElement;

  if (isEdge()) imageElement.src = "/images/model-s.webp";
  else imageElement.src = "/images/model-s.avif";
</script>
