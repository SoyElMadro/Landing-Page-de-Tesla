---
import Section from "./Section.astro";
---

<Section
  title="Model S"
  subtitle="Programe una consulta virtual"
  color="black"
  id="model-s"
>
  <div slot="footer" class="gap-x-6 flex mx-auto">
    <a
      class="bg-[#171a20] rounded text-sm text-white px-[60px] py-[10px] inline-block hover:bg-gray-800 hover:text-white hover:border-gray-800 transition-colors"
      href="#"
    >
      Pedido personalizado</a
    >
    <a
      class="bg-white text-sm rounded font-medium px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black"
      href="#"
    >
      Saber m√°s</a
    >
  </div>

  <div slot="background" class="absolute top-0 bottom-0 z-10">
    <img
      alt="Model S"
      class="h-full w-full object-cover object-center"
      src="model-s.avif"
      id="bg-image-model-s"
    />
  </div>
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-model-s"
  ) as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = "model-s.webp";
  } else {
    imageElement.src = "model-s.avif";
  }
</script>
