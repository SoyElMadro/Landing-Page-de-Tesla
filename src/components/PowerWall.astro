<section
  class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative"
  data-header-color="black"
  id="powerwall"
>
  <div class="z-30 relative h-full flex flex-col">
    <header>
      <h2 class="text-black text-[44px] font-medium pt-32 mb-1">
        Solar y Powerwall
      </h2>
      <p class="text-black text-md">Energía para todos</p>
    </header>

    <footer class="flex flex-col flex-grow justify-end pb-20">
      <div slot="footer" class="gap-x-6 flex mx-auto">
        <a
          class="bg-[#171a20] rounded text-md font-semibold text-white px-24 py-[10px] inline-block hover:bg-gray-800 hover:text-white hover:border-gray-800 transition-colors opacity-85"
          href="#"
        >
          Saber más</a
        >
      </div>
    </footer>
  </div>

  <div slot="background" class="absolute top-0 bottom-0 z-10">
    <img
      alt="Solar y Powerwall"
      class="w-full object-cover aspect-video"
      src="/images/powerwall.avif"
      id="bg-image-powerwall"
    />
  </div>
</section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    )
      return true;
    else return false;
  }

  let imageElement = document.querySelector(
    "#bg-image-powerwall"
  ) as HTMLImageElement;

  if (isEdge()) imageElement.src = "/images/powerwall.webp";
  else imageElement.src = "/images/powerwall.avif";
</script>
