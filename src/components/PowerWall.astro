---
import Section from "./Section.astro";
---

<Section
  title="Solar y Powerwall"
  subtitle="Energía para todos"
  color="black"
  id="powerwall"
>
  <div slot="footer" class="gap-x-6 flex mx-auto">
    
    <a
      class="bg-[#171a20] rounded text-sm text-white px-24 py-[10px] inline-block hover:bg-gray-800 hover:text-white hover:border-gray-800 transition-colors"
      href="#"
    >
      Saber más</a
    >
  </div>

  <div slot="background" class="absolute top-0 bottom-0 z-10">
    <img
      alt="Solar y Powerwall"
      class="h-full w-full object-cover object-center"
      src="powerwall.avif"
      id="bg-image-powerwall"
    />
  </div>
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-powerwall"
  ) as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = "powerwall.webp";
  } else {
    imageElement.src = "powerwall.avif";
  }
</script>
